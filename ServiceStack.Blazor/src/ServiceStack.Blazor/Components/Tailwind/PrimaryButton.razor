@inherits UiComponentBase

@if (!string.IsNullOrEmpty(href))
{
    <a href=@href class=@ClassNames(BaseClass, GetStyleClass(Style), Class) title=@title target=@target @onclick:stopPropagation @attributes="IncludeAttributes">
        @ChildContent
    </a>
}
else
{
    <button type=@type @onclick="onclick" class=@ClassNames(BaseClass, GetStyleClass(Style), Class) @attributes="IncludeAttributes">
        @ChildContent
    </button>
}