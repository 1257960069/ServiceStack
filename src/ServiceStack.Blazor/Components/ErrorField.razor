@if (Status.HasFieldError(Name!))
{
    if (BlazorConfig.Theme == Theme.Tailwind)
    {
        <p class=@(CssUtils.ClassNames("mt-2 text-sm text-red-600", @class)) id="@(Name)-error">@Status.FieldErrorMessage(Name!)</p>
    }
    else
    {
        <div class=@CssUtils.ClassNames("invalid-feedback", @class)>@Status.FieldErrorMessage(Name!)</div>
    }
}

@code {
    [Parameter]
    public string? @class { get; set; }
    [Parameter, EditorRequired]
    public string? Name { get; set; }

    [Parameter, EditorRequired]
    public ResponseStatus? Status { get; set; }
}
